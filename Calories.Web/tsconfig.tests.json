{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "jsx": "react",                     
    "declaration": true,                   
    "declarationMap": true,                
    "sourceMap": true,                     
    "outDir": "./tests-compiled/",                        
    "rootDir": "./",       
    "sourceRoot": "./tests/",                         
    "composite": true,                     
    "strict": true,                           
    "noImplicitAny": true,                 
    "strictNullChecks": true,              
    "strictFunctionTypes": true,           
    "strictPropertyInitialization": true,  
    "noImplicitThis": true,                
    "alwaysStrict": true,                  
    "skipLibCheck" : true,
    "moduleResolution": "node",            
    "esModuleInterop": true   
  },
  "exclude" :[
      "./node_modules/*",
      "./typescript-compiled/*",
      "./tests-compiled/*",
      "./build/*"
  ]
}